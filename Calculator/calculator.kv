<CalculatorLayout>:
    orientation: 'vertical'
    padding: 10

    BoxLayout:
        TextInput:
            id: result_label
            font_size: 30
            readonly: True

    BoxLayout:
        Button:
            text: '1'
            on_release: root.ids.result_label.text += self.text
        Button:
            text: '2'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '3'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: 'C'
            on_release: root.clear()

    BoxLayout:
        Button:
            text: '4'
            on_release: root.ids.result_label.text += self.text
        Button:
            text: '5'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '6'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '+'
            on_release: root.ids.result_label.text += self.text

    BoxLayout:
        Button:
            text: '7'
            on_release: root.ids.result_label.text += self.text
        Button:
            text: '8'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '9'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '-'
            on_release: root.ids.result_label.text += self.text


    BoxLayout:
        Button:
            text: '0'
            on_release: root.ids.result_label.text += self.text
        Button:
            text: '*'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '/'
            on_release: root.ids.result_label.text += self.text

        Button:
            text: '='
            on_release: root.calculate()